<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_disabled"
    tools:context="com.example.usuario.geomapcr.Jugar">

    <RelativeLayout
        android:layout_width="389dp"
        android:layout_height="508dp"
        android:background="@drawable/fondojugarr"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="3dp">

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="361dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@drawable/fondo_pregunta"
                android:id="@+id/relativeLayout4"
                android:layout_above="@+id/btn_siguiente"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="27dp">

                <Spinner
                    android:id="@+id/spr_opciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_toRightOf="@+id/textView12" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:text="Elija la opciÃ³n correcta"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_siguiente"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:background="@drawable/borde_redondo"
                android:backgroundTint="@android:color/holo_blue_bright"
                android:text="Siguiente"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="360dp"
        android:layout_height="318dp"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteY="-1dp"
        tools:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/img_pregunta"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_below="@+id/gri_1"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:maxHeight="250dp"
            android:maxWidth="275dp"
            android:minHeight="247dp"
            android:minWidth="275dp"
            app:srcCompat="@drawable/mapa" />


        <GridLayout
            android:id="@+id/gri_1"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_alignLeft="@+id/img_pregunta"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/img_pregunta">

            <TextView
                android:id="@+id/txt_pregunta"
                android:layout_width="339dp"
                android:layout_height="63dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/fondo_pregunta"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        </GridLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
